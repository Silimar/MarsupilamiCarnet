{% trans_default_domain 'FOSUserBundle' %}

<div id="login-page" class="row">

    <div class="col s12 z-depth-4 card-panel">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="row">
                <div class="input-field col s12 center">
                    <img src="" alt="" class="circle responsive-img valign profile-image-login">
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="mdi-social-person-outline prefix"></i>
                    <input id="username" type="text" value="{{ last_username }}" name="_username" required="required">
                    <label for="username" class="center-align">{{ 'security.login.username'|trans }}</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="mdi-action-lock-outline prefix"></i>
                    <input type="password" id="password" name="_password" required="required" />
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m12 l12  login-text">
                    <input type="checkbox" id="remember-me" />
                    <label for="remember-me">{{ 'security.login.remember_me'|trans}}</label>
                </div>

            </div>
            <div class="row">
                <input type="submit" class="btn waves-effect waves-light blue-grey col s12" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin right-align medium-small"><a href="">Forgot password ?</a></p>
                </div>
                <div class="row">
                    <div class="input-field col s6 m6 l6">
                        <p class="margin medium-small"><a href="{{ path('fos_user_registration_register') }}">S'inscrire!</a></p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
